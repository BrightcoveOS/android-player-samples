<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Androidplayersamples" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brightcove_navy_blue</item>
        <item name="colorPrimaryVariant">@color/brightcove_navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brightcove_bright_turquoise</item>
        <item name="colorSecondaryVariant">@color/brightcove_bright_turquoise</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Androidplayersamples.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Androidplayersamples.AppBarOverlay"  parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Androidplayersamples.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>