<resources>
    <!-- Override Theme.AudioOnlySample for API 35+ to use light status/navigation bars -->
    <style name="Theme.AudioOnlySample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brightcove_navy_blue</item>
        <item name="colorPrimaryVariant">@color/brightcove_navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brightcove_bright_turquoise</item>
        <item name="colorSecondaryVariant">@color/brightcove_bright_turquoise</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Use light status bar icons if your UI is light -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Use light navigation bar icons (API 27+) -->
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>
