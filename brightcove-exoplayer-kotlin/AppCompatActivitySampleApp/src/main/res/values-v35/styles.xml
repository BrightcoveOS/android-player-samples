<resources>
    <!-- Override Theme.AppCompatApp for API 35+ to use light status/navigation bars -->
    <style name="Theme.AppCompatApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!-- Use light status bar icons if your UI is light -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Use light navigation bar icons (API 27+) -->
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>
